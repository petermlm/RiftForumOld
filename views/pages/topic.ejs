<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="well"><%= topic.title %></div>
        <% topic.messages.forEach(function(message) { %>
            <div class="messages_list">
                <div class="messages_list_info">
                    By&nbsp;<span class="messages_list_info_username"><%= message.Username %></span>
                    &nbsp;on&nbsp;<span class="messages_list_info_timestamp"><%= message.MessageTime %></span>
                </div>
                <div class="messages_list_message"><%= message.Message %></div>
            </div>
        <% }); %>

        <% if(login) { %>
        <div class="new_message_forum">
            <form method="POST" action="/topics/<%= topic.topic_id %>">
                <textarea class="form-control" name="message" placeholder="Message"></textarea>
                <button type="submit" class="btn btn-default">Send</button>
            </form>
        </div>
        <% } %>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>
