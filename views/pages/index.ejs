<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="well">Topics</div>
        <% topics.forEach(function(topic) { %>
            <div class="row topics_list_item" onclick="location.href='/topics/<%= topic.topic_id %>';">
                <div class="col-sm-2"><%= topic.username %></div>
                <div class="col-sm-6"><%= topic.title %></div>
                <div class="col-sm-4 topics_list_timestamp"><%= topic.topic_timestamp %></div>
            </div>
        <% }); %>
        <div>
            <form method="POST" action="/topics">
                <input class="form-control" name="title" placeholder="title" type="text" />
                <textarea name="message"></textarea>
                <button type="submit" class="btn btn-default">Send</button>
            </form>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
</body>
</html>
