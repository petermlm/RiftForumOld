<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="page_title_wrapper">
            <div class="page_title">
                <h1><%= user.username %></h1>
            </div>
        </div>

        <div class="user_info_wrapper">
            <div class="user_info_user_type">
                <%= user.user_type %>
            </div>
        </div>

        <div class="user_info_wrapper">
            <div class="user_info_part">
                <h2>About
                    <% if(enable_edition) { %>
                    <a id="edit_user_info_about" href="#">(Edit)</a>
                    <% } %>
                </h2>
                <div id="user_info_about_text"><%- user.aboutF %></div>
                <% if(enable_edition) { %>
                <div id="user_info_about_form">
                    <form method="POST" action="/users/<%= user.username %>">
                    <textarea class="form-control" name="about" placeholder="About"><%= user.about %></textarea>
                    <button type="submit" class="btn btn-default">Send</button>
                    <button type="button" id="user_info_about_cancel" class="btn btn-default">Cancel</button>
                    </form>
                </div>
                <% } %>
            </div>
        </div>

        <div class="user_info_wrapper">
            <div class="user_info_part">
                <h2>Signature
                    <% if(enable_edition) { %>
                    <a id="edit_user_info_signature" href="#">(Edit)</a>
                    <% } %>
                </h2>
                <div id="user_info_signature_text"><%- user.signatureF %></div>
                <% if(enable_edition) { %>
                <div id="user_info_signature_form">
                    <form method="POST" action="/users/<%= user.username %>">
                    <textarea class="form-control" name="signature" placeholder="About"><%= user.signature %></textarea>
                    <button type="submit" class="btn btn-default">Send</button>
                    <button type="button" id="user_info_signature_cancel" class="btn btn-default">Cancel</button>
                    </form>
                </div>
                <% } %>
            </div>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
</body>
</html>
